package Java;
public class a02_java_StringBuilder {
    public static void main(String [] args){
       StringBuilder sb = new StringBuilder("hellow");
       sb.charAt(0);
       sb.setCharAt(0,'b');
       sb.insert(1,'h');
       sb.delete(2,4);//delete 2nd and 3rd index element
       sb.append('w');
       System.out.print(sb.length());
        
    }
}
